<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('.owl-carousel').forEach(function (carousel) {
            const itemCount = carousel.querySelectorAll('.card').length;

            $(carousel).owlCarousel({
                margin: 20,
                loop: false,
                nav: itemCount > 4,
                dots: false,
                responsive: {
                    0: { items: 1 },
                    576: { items: 2 },
                    768: { items: 3 },
                    992: { items: 4 },
                    1200: { items: 5 }
                }
            });
        });
    });
    
</script>

